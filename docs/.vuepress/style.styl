.theme-container.sb-blog {
    .content { 
        text-align: center; 
    }

    .content h2 {
        text-align: left;
        display: block;
    }

    .content h2 a{
        color: black;
        text-decoration: none;
    }

    .content h2 a:hover {
        color: #3eaf7c;
        text-decoration: none;
    }

    .content .tip {
        text-align: left;
        margin-top: 30px;
    }

    .sb-tag {
        float: left;
        margin-top: 5px;
    }
}

.content p {
    text-indent: 2em;
}

.content .custom-block p {
    text-indent: 0em;
}